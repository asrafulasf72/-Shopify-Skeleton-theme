<div class="header-sections">
  <nav class="navbarm navbar-expand-lg  bg-light">
  <div class="container-fluid nav">
    <a class=" n" href={shop.url}>
      {%if settings.logo != blank%}
          <img class="im" src="{{settings.logo |  image_url }}" width="auto" height="auto" alt="">
        {% else %}
        {{shop.name}}
      {%endif%}
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        {% for link in section.settings.menu.links %}
        <li class="nav-item">
          <a class="nav-linkm active" aria-current="page" href={{link.url}}>{{link.title}}</a>
        </li>
        {% if link.links.size > 0 %}
          <li class="nav-item dropdown">
          <a class="nav-linkm dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            {{link.title}}
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            {%for child in link.links%}
            <li><a class="dropdown-item" href="{{ child.url }}">{{child.title}}</a></li>
            {%endfor%}
          </ul>
        </li>
        {%endif%}
      {%endfor%}
      
      </ul>
      <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>

      <div class="header-cart-count mx-2">
        <button type="button" class="cart-toggle-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35"
           fill="currentColor" viewBox="0 0 16 16">
             <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z"/>
        </svg>

               {% if cart.item_count > 0 %}
               <span id="cartcounter">{{ cart.item_count }}</span>
               {% endif %}
       </button>
    </div>
    </div>
  </div>
</nav>
</div>

{% schema %}
{
  "name": "Header",
  "settings": [
     {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
     }
    ]
}
{% endschema %}