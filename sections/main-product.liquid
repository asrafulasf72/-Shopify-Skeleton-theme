<section class="main-product-section">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        {{ product.featured_image | image_url: width: 600 | image_tag }}
      </div>

      <div class="col-md-6">
        <h1>{{ product.title }}</h1>
        <p>{{ product.price | money }}</p>
        {{ product.description }}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Main Product",
  "settings": []
}
{% endschema %}