<div class="cart-overlay"></div>

<!-- Cart Drawer -->
<div class="cart-drawer">
  <div class="cart-header">
    <h3>Your Cart</h3>
    <button class="cart-close-btn" aria-label="Close cart">&times;</button>
  </div>

  <div class="cart-body">
    <div class="cart-items"></div>
  </div>

  <div class="cart-footer">
    <div class="cart-subtotal">
      <span>Subtotal:</span>
      <span class="cart-total-price"></span>
    </div>

    <div class="cart-actions">
      <!-- View Cart Button -->
      <a href="{{routes.cart_url}}" class="view-cart-btn">
        View Cart
      </a>

      <!-- Checkout Button -->
      <a href="/checkout" class="checkout-btn">
        Checkout
      </a>
    </div>
  </div>
</div>



{% comment %} <script>
document.addEventListener("DOMContentLoaded", function() {

  const cartBtn = document.querySelector(".cart-toggle-btn");
  const cartDrawer = document.querySelector(".cart-drawer");
  const cartOverlay = document.querySelector(".cart-overlay");
  const cartClose = document.querySelector(".cart-close-btn");

  if(cartBtn && cartDrawer && cartOverlay && cartClose){

    cartBtn.addEventListener("click", function() {
      cartDrawer.classList.add("active");
      cartOverlay.classList.add("active");
    });

    cartClose.addEventListener("click", function() {
      cartDrawer.classList.remove("active");
      cartOverlay.classList.remove("active");
    });

    cartOverlay.addEventListener("click", function() {
      cartDrawer.classList.remove("active");
      cartOverlay.classList.remove("active");
    });

  }

});
</script> {% endcomment %}
