<div class="image-with-text-section">
  <div class="container image-text-flex">

    <!-- Image Column -->
    <div class="image">
      {% if section.settings.image_text != blank %}
        {{ section.settings.image_text
          | image_url: width: 600
          | image_tag:
            class: 'image-with-text-img',
            alt: section.settings.heading }}
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'image-with-text-placeholder' }}
      {% endif %}
    </div>

    <!-- Text Column -->
    <div class="text">
      <h2 class="heading">{{ section.settings.heading }}</h2>
      <div class="description">
        {{ section.settings.short_des }}
      </div>
    </div>

  </div>
</div>



{% schema %}
{
  "name": "Image With Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_text",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Image With Text",
      "default": "Image With Text"
    },
    {
      "type": "richtext",
      "id": "short_des",
      "label": "Description",
      "default": "<p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Porro doloribus ratione autem dicta non sed ab quos consequuntur libero fuga.</p>"
    }
  ],
  "presets": [
    {
      "name": "Image With Text",
      "category": "ImageText"
    }
  ]
}
{% endschema %}
